
<header style="background-color: cadetblue;">
    <div class="container-fluid p-3">
        <div class="row d-flex justify-content-between align-items-center">
            <div class="col-4 d-flex justify-content-between align-items-center">
                <div class="col-2">
                    <img src="/images/logo.jpg" alt="logo" style="height: 80px; width: 100px;">
                </div>
                <div class="col-9 text-white">
                    <h1>Placement Cell</h1>
                </div>
            </div>
            <div class="col-4 d-flex justify-content-between align-items-center">
                <div class="col-6">
                    <% if(locals.user) { %>
                        <a href="/employees/profile"><button type="button" class="btn btn-success"><%= user.name %></button> </a>
                    <% } %>
                </div>
                <div class="col-6">
                    <% if(locals.user) { %>
                        <a href="/employees/destroy"><button type="button" class="btn btn-warning">Sign Out</button></a>
                    <% } else {%>
                        <div class="d-flex justify-content-center">
                            <a href="/employees/sign_in"><button type="submit" class="btn btn-danger">Sign In/Sign Up</button></a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</header>